<mvc:View
    controllerName="GASS.zcashquerymovements.controller.Documents"
    height="100%"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:form="sap.ui.layout.form" 
	xmlns:layout="sap.ui.layout">

    <ObjectPageLayout
        showTitleInHeaderContent="true"
		useIconTabBar="true"
		upperCaseAnchorBar="false">
        <headerTitle>
            	<ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title text="Documento: 0000047851" wrapping="true"/>
                    </expandedHeading>
                    <snappedHeading>
                        <m:FlexBox fitContainer="true" alignItems="Center">
                            <!-- <m:Avatar src="./test-resources/sap/uxap/images/imageID_275314.png" class="sapUiTinyMarginEnd"/>
                            <m:Title text="Denise Smith" wrapping="true" /> -->
                             <m:Title text="Documento: 0000047851" wrapping="true"/>
                        </m:FlexBox>
                    </snappedHeading>
                   

                    <!-- <actions>
                        <m:Button text="Edit" type="Emphasized"/>
                        <m:Button type="Transparent" text="Delete"/>
                        <m:Button type="Transparent" text="Copy"/>
                        <m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
                    </actions> -->
                </ObjectPageDynamicHeaderTitle>
        </headerTitle>

       	<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" >
				<!-- <m:Avatar class="sapUiSmallMarginEnd" src="./test-resources/sap/uxap/images/imageID_275314.png" displaySize="L" />

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Link text="+33 6 4512 5158"/>
					<m:Link text="DeniseSmith@sap.com"/>
				</layout:VerticalLayout> -->

				<!-- <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
					<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
					<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/>
				</layout:HorizontalLayout> -->

				<layout:VerticalLayout class="sapUiResponsiveContentPadding">
					<m:Label text="{i18n>noDocto}" design="Bold" width="auto"/>
					<m:VBox>
						<m:Label text="0000047851" width="auto"/>
					</m:VBox>

                    <m:Label text="{i18n>Period}" design="Bold" width="auto"/>
					<m:VBox>
						<m:Label text="4" width="auto"/>
					</m:VBox>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiResponsiveContentPadding">
					<m:Label text="{i18n>Socieda}" design="Bold"/>
                    <m:VBox>
						<m:Label text="4200"/>
					</m:VBox>

                    <m:Label text="{i18n>ref}" design="Bold"/>
                    <m:VBox>
						<m:Label text=""/>
					</m:VBox>
				</layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiResponsiveContentPadding">
					<m:Label text="{i18n>Ejercicio} "  width="auto" textAlign="End" design="Bold" />
                    <m:VBox>
						<m:Label text="2022"/>
					</m:VBox>

                    <m:Label text="{i18n>NumGen} "  width="auto" textAlign="End"  design="Bold"/>
                    <m:VBox>
						<m:Label text=""/>
					</m:VBox>
				</layout:VerticalLayout>
                	<layout:VerticalLayout class="sapUiResponsiveContentPadding">
					<m:Label text="{i18n>FecDocto} "  width="auto" textAlign="End" design="Bold"/>
					 <m:VBox>
						<m:Label text="04-22-2022"/>
					</m:VBox>
				</layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiResponsiveContentPadding">
					<m:Label text="{i18n>FechaCont} "  width="auto" textAlign="End" design="Bold"/>
					 <m:VBox>
						<m:Label text="04-22-2022"/>
					</m:VBox>
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>
        <sections>
            <ObjectPageSection titleUppercase="false" title="Table information">
                <subSections>
                    <ObjectPageSubSection title="Movimientos" titleUppercase="false">
                        <t:Table id="table" rows="{ path: 'cajaModel>/0/NavMovimientos/results', sorter: { path: 'Indice', descending: true } }" selectionMode="None"
								rowActionCount="1" class="sapUiTinyMarginBottom"  visibleRowCount="5"
								ariaLabelledBy="title">
								
								<t:columns>
                                    <t:Column sortProperty="Indice" filterProperty="Indice" width="4rem">
										<m:Label text="{i18n>Ind}"/>
										<t:template>
											<m:Text text="{cajaModel>Indice}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="Documento" filterProperty="Documento" width="8rem">
										<m:Label text="{i18n>noDocto}"/>
										<t:template>
											<m:Button icon="sap-icon://batch-payments" tooltip="Ver Documentos" text="{cajaModel>Documento}" visible="true" type="Transparent" press="_onViewDoc"/>
										</t:template>
									</t:Column>
                                    <t:Column sortProperty="Caja" filterProperty="Caja" width="5rem">
										<m:Label text="{i18n>Caja}"/>
										<t:template>
											<m:Text text="{cajaModel>Caja}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="Operacion" filterProperty="Operacion" width="8rem">
										<m:Label text="{i18n>Oper}"/>
										<t:template>
											<m:Text text="{cajaModel>Operacion}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="Cliente" filterProperty="Cliente" width="7rem">
										<m:Label text="{i18n>Cli}"/>
										<t:template>
											<m:Text text="{cajaModel>Cliente}" wrapping="false"/>
										</t:template>
									</t:Column>
                                    <t:Column sortProperty="ViaPago" filterProperty="ViaPago" width="4rem">
										<m:Label text="{i18n>ViaPag}"/>
										<t:template>
											<m:Text text="{cajaModel>ViaPago}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ReferenciaPago" filterProperty="ReferenciaPago" width="7rem">
										<m:Label text="{i18n>RefPag}"/>
										<t:template>
											<m:Text text="{cajaModel>ReferenciaPago}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ImporteMoneda" filterProperty="ImporteMoneda" width="8rem">
										<m:Label text="{i18n>Moneda}"/>
										<t:template>
												<m:Text text="{cajaModel>ImporteMoneda}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="Importe" filterProperty="Importe" width="8rem">
										<m:Label text="{i18n>Importe}"/>
										<t:template>
												<u:Currency value="{
                                                    path: 'cajaModel>Importe',
                                                    type: 'sap.ui.model.type.String'
                                                }" />
										</t:template>
									</t:Column>
									
									<t:Column sortProperty="FechaContabilizacion" filterProperty="FechaContabilizacion" width="7rem">
										<m:Label text="{i18n>fecCont}"/>
										<t:template>
											<m:Text text="{cajaModel>FechaCont}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="ClaveReferencia" filterProperty="ClaveReferencia" width="7rem">
										<m:Label text="{i18n>clvRef}"/>
										<t:template>
											<m:Text text="{cajaModel>ClaveReferencia}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="Cuenta" filterProperty="Cuenta" width="7rem">
										<m:Label text="{i18n>ctaBanc}"/>
										<t:template>
											<m:Text text="{cajaModel>Cuenta}" wrapping="false"/>
										</t:template>
									</t:Column>
                                    <t:Column sortProperty="FechaVen" filterProperty="FechaVen" width="7rem">
										<m:Label text="{i18n>fecVenc}"/>
										<t:template>
											<m:Text text="{cajaModel>FechaVen}" wrapping="false"/>
										</t:template>
									</t:Column>
                                    <t:Column sortProperty="ClaveAutorizacion" filterProperty="ClaveAutorizacion" width="7rem">
										<m:Label text="{i18n>cvAut}"/>
										<t:template>
											<m:Text text="{cajaModel>ClaveAutorizacion}" wrapping="false"/>
										</t:template>
									</t:Column>
                                    <t:Column sortProperty="Pagador" filterProperty="Pagador" width="7rem">
										<m:Label text="{i18n>Pagador}"/>
										<t:template>
											<m:Text text="{cajaModel>Pagador}" wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>		
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

        </sections>
    </ObjectPageLayout>
    
   
</mvc:View>